{
  "extends": ["airbnb-typescript/base", "eslint:recommended", "plugin:import/recommended"],
  "parserOptions": {
      "project": ["./tsconfig.json"]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "import/prefer-default-export": 0,
    "import/extensions": 0,
    "class-methods-use-this": 0,
    "no-plusplus": 0,
    "no-restricted-syntax": 0,
    "max-len": 0,
    "no-console": "off",
    "no-param-reassign": 0,
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "import/no-named-as-default": "off"
  },
  "globals": {
    "document": "readonly",
    "process": "readonly",
    "console": "readonly",
    "setTimeout": "readonly"
  }
}
